config common "settings"
    option ports "1 2 3 4"
    option vlan_type '8021q'

config port '1'
    option ifname 'eth0.1'
    option service 'lan'
    option speed '1G'
    option link_mode '0'
    option switch 'switch0'
    option cpu_port '6'
    option phy_id '0'
    option base_iface 'eth0'
    option type 'eth'
    option label '1'

config port '2'
    option ifname 'eth0.2'
    option service 'lan'
    option speed '1G'
    option link_mode '0'
    option switch 'switch0'
    option cpu_port '6'
    option phy_id '1'
    option base_iface 'eth0'
    option type 'eth'
    option label '2'

config port '3'
    option ifname 'eth0.3'
    option service 'lan'
    option speed '1G'
    option link_mode '0'
    option switch 'switch0'
    option cpu_port '6'
    option phy_id '2'
    option base_iface 'eth0'
    option type 'eth'
    option label '3'

config port '4'
    option ifname 'eth0.4'
    option service 'lan'
    option type 'eth'
    option speed '1G'
    option switch 'switch0'
    option cpu_port '6'
    option phy_id '3'
    option base_iface 'eth0'
    option link_mode '0'
